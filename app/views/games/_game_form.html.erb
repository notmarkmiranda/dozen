<div class="form-group">
  <%= f.label :buy_in %>
  <%= f.text_field :buy_in, class: 'form-control' %>
</div>
<div class="form-group form-check">
  <%= f.check_box :add_ons, class: 'form-check-input' %>
  <%= f.label :add_ons, 'Allows Rebuys or Add Ons', class: 'form-check-label' %>
</div>
<div class="form-group">
  <%= f.label :address %>
  <%= f.text_field :address, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :estimated_players_count, 'Estimated Player Count' %>
  <%= f.text_field :estimated_players_count, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :payout_schedule, "Payout schedule in percentages" %>
  <br><small>Total must equal 100</small>
  <%= f.fields_for :payout_schedule, OpenStruct.new(@game.payout_schedule) do |ff| %>
    <div class="form-group row">
      <div class="col">
        <%= ff.label :first, "1st" %>
        <%= ff.text_field :first, class: 'form-control' %>
      </div>
      <div class="col">
        <%= ff.label :second, "2nd" %>
        <%= ff.text_field :second, class: 'form-control' %>
      </div>
      <div class="col">
        <%= ff.label :third, "3rd" %>
        <%= ff.text_field :third, class: 'form-control'  %>
      </div>
    </div>
  <% end %>
</div>
<div class="form-group">
  <%= f.label :date, 'Date & Time' %>
  <%= f.date_field :date, class: 'form-control' %>
</div>
<%= f.submit button_title, class: 'btn btn-dark btn-block' %>