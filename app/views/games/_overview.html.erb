<h4>Game Overview</h4>
<small class="text-muted">Game <%= @game.game_number_in_season %> of <%= link_to "Season ##{@game.season.number_in_order}", @game.season %></small>
<hr>
<div class="row">
  <div class="col-md-6">
    <b>Date & Time:</b> <%= @game.formatted_full_date %><br />
    <b>Address:</b> <%= @game.address %><br />
    <b>Rebuys:</b> <%= @game.rebuy_text %><br />
    <b>Payout Schedule:</b> <br />1st: <%= @game.payout_amount('first') %><br />2nd: <%= @game.payout_amount('second') %><br />3nd: <%= @game.payout_amount('third') %>
  </div>
  <div class="col-md-6">
    <b>Buy in:</b> <%= @game.buy_in_text %><br />
    <%= @game.player_text %><br />
    <%= @game.pot_text %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-6">
    
  </div>
  <div class="col-md-6">
  </div>
</div>
