<div class="container">
  <%= link_to 'Create New League', new_league_path %>
  <div class="card">
    <div class="card-header">
      Leagues
    </div>
    <ul class="list-group list-group-flush">
      <% @leagues.each do |league| %>
        <li class="list-group-item league-info">
          <div class="league-info">
            <div class="league-location">
              <small class="text-muted"><%= league.location %></small>
            </div>
            <%= league.name %>
            <div class="league-stats">
              <small class="text-muted">
                Game: 46 | Next Game: Not Scheduled | Average Pot: $118
              </small>
            </div>
          </div>
          <div class="user-role">
            <small>Admin</small>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
